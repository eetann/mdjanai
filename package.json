{
	"name": "mdjanai",
	"version": "0.0.0",
	"author": "eetann",
	"description": "A CLI tool that convert text for Slack",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/eetann/mdjanai.git"
	},
	"homepage": "https://github.com/eetann/mdjanai",
	"bugs": {
		"url": "https://github.com/eetann/mdjanai/issues"
	},
	"keywords": [
		"cli",
		"command-line"
	],
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"bin": {
		"mdjanai": "./dist/index.js"
	},
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"lint": "biome check",
		"formant": "biome format --write",
		"typecheck": "tsgo --noEmit",
		"release": "bun run lint && bun run typecheck && bun run test && bun run build && bumpp",
		"test": "bun test",
		"test:watch": "bun test --watch"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@types/bun": "latest",
		"@types/mdast": "^4.0.4",
		"@typescript/native-preview": "^7.0.0-dev.20251006.1",
		"bumpp": "^10.3.1",
		"tsdown": "^0.15.6"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"gunshi": "^0.26.3",
		"mdast-util-to-string": "^4.0.0",
		"remark-breaks": "^4.0.0",
		"remark-html": "^16.0.1",
		"remark-parse": "^11.0.0",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.0.0"
	}
}
